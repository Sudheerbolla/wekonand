<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_row_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_5"
    android:background="@drawable/bg_white_paleblue_selector"
    android:padding="@dimen/space_10">

    <ImageView
        android:id="@+id/iv_delete_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/tv_reviews_count"
        android:src="@mipmap/img_delete_sc18" />

    <com.weekend.views.CustomTextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/iv_delete_notification"
        android:gravity="right"
        android:paddingLeft="@dimen/space_5"
        android:textColor="@color/color_63_67_72"
        android:textSize="@dimen/txt_12"
        app:font_type="AvenirNextLTPro_Medium" />

    <com.weekend.views.CustomTextView
        android:id="@+id/tv_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date"
        android:layout_gravity="right"
        android:layout_toRightOf="@id/iv_delete_notification"
        android:gravity="right"
        android:lineSpacingExtra="@dimen/space_4"
        android:paddingLeft="@dimen/space_5"
        android:textColor="@color/color_105_111_116"
        android:textSize="@dimen/txt_10"
        app:font_type="AvenirNextLTPro_Regular_0" />
</RelativeLayout>