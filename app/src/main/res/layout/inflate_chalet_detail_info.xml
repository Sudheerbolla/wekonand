<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_243_243_243"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_chalet_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:padding="@dimen/space_10"
            android:text=""
            android:textColor="@color/color_63_67_72"
            android:textSize="@dimen/txt_12"
            app:font_type="AvenirNextLTPro_Regular_0" />

        <View
            android:id="@+id/v_chalet_title"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_225_225_225" />

        <RelativeLayout
            android:id="@+id/rl_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:padding="@dimen/space_10">

            <com.weekend.views.CustomTextView
                android:id="@+id/tv_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/color_35_120_201"
                android:textSize="@dimen/txt_13"
                app:font_type="AvenirNextLTPro_Regular_0" />

            <View
                android:id="@+id/v_separator"
                android:layout_width="@dimen/space_1"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_5"
                android:layout_toLeftOf="@id/tv_reviews"
                android:background="@color/color_208_208_208" />

            <com.weekend.views.CustomTextView
                android:id="@+id/tv_reviews_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/v_separator"
                android:drawableLeft="@mipmap/img_rating_sc12"
                android:drawablePadding="@dimen/space_5"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color_105_111_116"
                android:textSize="@dimen/txt_12"
                app:font_type="AvenirNextLTPro_Regular_0" />

        </RelativeLayout>

        <View
            android:id="@+id/v_reviews"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_225_225_225" />

        <RelativeLayout
            android:id="@+id/rlCheckInOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_10">

            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/space_5"
                android:src="@mipmap/icon_clock" />

            <LinearLayout
                android:id="@+id/ll_checkin_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_time"
                android:orientation="horizontal">


                <com.weekend.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="@string/check_in"
                    android:textColor="@color/color_117_117_117"
                    android:textSize="@dimen/txt_12"
                    app:font_type="AvenirNextLTPro_Regular_0" />

                <com.weekend.views.CustomTextView
                    android:id="@+id/tv_checkin_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/color_63_67_72"
                    android:textSize="@dimen/txt_12"
                    app:font_type="AvenirNextLTPro_Regular_0" />
            </LinearLayout>

            <View
                android:id="@+id/v_time_separator"
                android:layout_width="@dimen/space_1"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_5"
                android:layout_toLeftOf="@id/ll_checkin_time"
                android:background="@color/color_208_208_208" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/v_time_separator"
                android:orientation="horizontal">

                <com.weekend.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="@string/check_out"
                    android:textColor="@color/color_117_117_117"
                    android:textSize="@dimen/txt_12"
                    app:font_type="AvenirNextLTPro_Regular_0" />

                <com.weekend.views.CustomTextView
                    android:id="@+id/tv_checkout_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/color_63_67_72"
                    android:textSize="@dimen/txt_12"
                    app:font_type="AvenirNextLTPro_Regular_0" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_225_225_225" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_chalet_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="right"
            android:lineSpacingExtra="@dimen/space_5"
            android:padding="@dimen/space_10"
            android:text=""
            android:textColor="@color/color_105_111_116"
            android:textSize="@dimen/txt_12"
            app:font_type="AvenirNextLTPro_Regular_0" />

        <View
            android:id="@+id/v_chalet_desc"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_225_225_225" />

        <RelativeLayout
            android:id="@+id/rl_downpayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/space_10">

            <ImageView
                android:id="@+id/iv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/space_5"
                android:src="@mipmap/icon_money" />

            <com.weekend.views.CustomTextView
                android:id="@+id/tv_price_starts_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toLeftOf="@id/iv_money"
                android:gravity="center"
                android:text="@string/price_starts_from"
                android:textColor="@color/color_63_67_72"
                android:textSize="@dimen/txt_12"
                app:font_type="AvenirNextLTPro_Regular_0" />


            <com.weekend.views.CustomTextView
                android:id="@+id/tv_start_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_price_starts_from"
                android:paddingRight="@dimen/space_3"
                android:text=""
                android:textColor="@color/color_63_67_72"
                android:textSize="@dimen/txt_12"
                app:font_type="AvenirNextLTPro_Medium" />

            <com.weekend.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_start_price"
                android:paddingRight="@dimen/space_1"
                android:text="@string/currency"
                android:textColor="@color/color_63_67_72"
                android:textSize="@dimen/txt_12"
                app:font_type="AvenirNextLTPro_Medium" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_225_225_225" />

        <LinearLayout
            android:id="@+id/ll_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_10">

            <com.weekend.views.CustomTextView
                android:id="@+id/tv_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right"
                android:lineSpacingExtra="@dimen/space_5"
                android:maxLines="2"
                android:text="@string/discount_code"
                android:textColor="@color/color_105_111_116"
                android:textSize="@dimen/txt_12"
                app:font_type="AvenirNextLTPro_Regular_0" />


            <com.weekend.views.CustomTextView
                android:id="@+id/tv_coupon_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:paddingTop="@dimen/space_3"
                android:text=""
                android:textColor="@color/color_153_161_168"
                android:textSize="@dimen/txt_11"
                app:font_type="AvenirNextLTPro_Regular_0" />
        </LinearLayout>

        <View
            android:id="@+id/v_discount"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_225_225_225" />

        <RelativeLayout
            android:id="@+id/rl_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/space_10">

            <ImageView
                android:id="@+id/iv_insurance_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/space_5"
                android:src="@mipmap/icon_insurance" />

            <com.weekend.views.CustomTextView
                android:id="@+id/tv_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toLeftOf="@id/iv_insurance_money"
                android:gravity="center"
                android:text="@string/insurance_amount"
                android:textColor="@color/color_63_67_72"
                android:textSize="@dimen/txt_12"
                app:font_type="AvenirNextLTPro_Regular_0" />


            <com.weekend.views.CustomTextView
                android:id="@+id/tv_insurance_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_insurance"
                android:paddingRight="@dimen/space_3"
                android:text=""
                android:textColor="@color/color_63_67_72"
                android:textSize="@dimen/txt_12"
                app:font_type="AvenirNextLTPro_Medium" />

            <com.weekend.views.CustomTextView
                android:id="@+id/tv_insurance_price_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_insurance_price"
                android:paddingRight="@dimen/space_1"
                android:text="@string/currency"
                android:textColor="@color/color_63_67_72"
                android:textSize="@dimen/txt_12"
                app:font_type="AvenirNextLTPro_Medium" />

        </RelativeLayout>

        <View
            android:id="@+id/v_insurance"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_225_225_225" />

        <com.weekend.views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_10"
            android:paddingTop="@dimen/space_10"
            android:text="@string/contact_info"
            android:textColor="@color/color_63_67_72"
            android:textSize="@dimen/txt_12"
            app:font_type="AvenirNextLTPro_Regular_0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/space_7"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_10"
            android:paddingTop="@dimen/space_7">

            <ImageView
                android:id="@+id/iv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_mobile" />

            <com.weekend.views.CustomTextView
                android:id="@+id/tv_mobile_number_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/space_5"
                android:layout_toLeftOf="@id/iv_mobile"
                android:gravity="center_vertical"
                android:textColor="@color/color_35_120_201"
                android:textSize="@dimen/txt_12"
                app:font_type="AvenirNextLTPro_Regular_0" />

            <com.weekend.views.CustomTextView
                android:id="@+id/tv_mobile_number_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/space_10"
                android:layout_toLeftOf="@id/tv_mobile_number_one"
                android:gravity="center_vertical"
                android:textColor="@color/color_35_120_201"
                android:textSize="@dimen/txt_12"
                app:font_type="AvenirNextLTPro_Regular_0" />
        </RelativeLayout>


        <com.weekend.views.CustomTextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/space_5"
            android:drawableRight="@mipmap/icon_email_address"
            android:gravity="right|center_vertical"
            android:paddingBottom="@dimen/space_7"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_10"
            android:text=""
            android:textColor="@color/color_105_111_116"
            android:textSize="@dimen/txt_12"
            android:visibility="gone"
            app:font_type="AvenirNextLTPro_Regular_0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_size"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_10">

            <ImageView
                android:id="@+id/iv_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_3"
                android:src="@mipmap/icon_twitter" />

            <ImageView
                android:id="@+id/iv_instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_3"
                android:src="@mipmap/icon_instagram" />

            <ImageView
                android:id="@+id/iv_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_3"
                android:src="@mipmap/icon_facebook" />

            <ImageView
                android:id="@+id/iv_youtube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_3"
                android:src="@mipmap/icon_youtube" />
        </LinearLayout>

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="right"
            android:lineSpacingExtra="@dimen/space_5"
            android:paddingBottom="@dimen/space_7"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_10"
            android:paddingTop="@dimen/space_7"
            android:text="@string/note_n_please_inform_the_owner_that_you_got_the_number_from_weekend"
            android:textColor="@color/color_187_21_25"
            android:textSize="@dimen/txt_12"
            app:font_type="AvenirNextLTPro_Medium" />

        <View
            android:id="@+id/v_note"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_225_225_225" />

        <LinearLayout
            android:id="@+id/ll_cancellation_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:orientation="horizontal"
            android:padding="@dimen/space_10">

            <com.weekend.views.CustomTextView
                android:id="@+id/tv_cancellation_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/space_3"
                android:drawablePadding="@dimen/space_5"
                android:drawableRight="@mipmap/img_cancel_policy"
                android:gravity="center_vertical"
                android:text="@string/cancellation_policy"
                android:textColor="@color/color_117_117_117"
                android:textSize="@dimen/txt_12"
                app:font_type="AvenirNextLTPro_Regular_0" />

            <com.weekend.views.CustomTextView
                android:id="@+id/tv_cancellation_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/color_35_120_201"
                android:textSize="@dimen/txt_12"
                app:font_type="AvenirNextLTPro_Regular_0" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>