<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_white_shaded_corner_5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.weekend.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/space_10"
            android:text="@string/price_range"
            android:textColor="@color/color_105_111_116"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/space_15"
            android:src="@mipmap/icon_close" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:background="@drawable/bg_white_gray_stroke_corner_5"
        android:padding="@dimen/space_12">


        <com.weekend.views.CustomTextView
            android:id="@+id/tv_cur_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:paddingRight="@dimen/space_1"
            android:text="@string/currency"
            android:textColor="@color/color_35_120_201"
            android:textSize="@dimen/txt_12"
            app:font_type="AvenirNextLTPro_Medium" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_sun_wed_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space_1"
            android:layout_marginRight="@dimen/space_1"
            android:layout_toRightOf="@id/tv_cur_m"
            android:gravity="left"
            android:textColor="@color/color_35_120_201"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Medium" />

        <com.weekend.views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_sun_wed_price"
            android:gravity="right"
            android:text="@string/sunday_wednesday"
            android:textColor="@color/color_105_111_116"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:background="@drawable/bg_white_gray_stroke_corner_5"
        android:padding="@dimen/space_12">

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_cur_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingRight="@dimen/space_1"
            android:text="@string/currency"
            android:textColor="@color/color_35_120_201"
            android:textSize="@dimen/txt_12"
            app:font_type="AvenirNextLTPro_Medium" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_thu_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_cur_t"
            android:text=""
            android:textColor="@color/color_35_120_201"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Medium" />

        <com.weekend.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_thu_price"
            android:gravity="right"
            android:text="@string/thursday"
            android:textColor="@color/color_105_111_116"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:background="@drawable/bg_white_gray_stroke_corner_5"
        android:padding="@dimen/space_12">

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_cur_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingRight="@dimen/space_1"
            android:text="@string/currency"
            android:textColor="@color/color_35_120_201"
            android:textSize="@dimen/txt_12"
            app:font_type="AvenirNextLTPro_Medium" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_fri_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_cur_f"
            android:text=""
            android:textColor="@color/color_35_120_201"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Medium" />

        <com.weekend.views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_fri_price"
            android:gravity="right"
            android:text="@string/friday"
            android:textColor="@color/color_105_111_116"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:background="@drawable/bg_white_gray_stroke_corner_5"
        android:padding="@dimen/space_12">

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_cur_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingRight="@dimen/space_1"
            android:text="@string/currency"
            android:textColor="@color/color_35_120_201"
            android:textSize="@dimen/txt_12"
            app:font_type="AvenirNextLTPro_Medium" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_sat_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_cur_s"
            android:text=""
            android:textColor="@color/color_35_120_201"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Medium" />

        <com.weekend.views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_sat_price"
            android:gravity="right"
            android:text="@string/saturday"
            android:textColor="@color/color_105_111_116"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:background="@drawable/bg_white_gray_stroke_corner_5"
        android:padding="@dimen/space_12">

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_cur_fitr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingRight="@dimen/space_1"
            android:text="@string/currency"
            android:textColor="@color/color_35_120_201"
            android:textSize="@dimen/txt_12"
            app:font_type="AvenirNextLTPro_Medium" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_eid_al_fitr_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_cur_fitr"
            android:text=""
            android:textColor="@color/color_35_120_201"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Medium" />

        <com.weekend.views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_eid_al_fitr_price"
            android:gravity="right"
            android:text="@string/eid_al_fitr"
            android:textColor="@color/color_105_111_116"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:background="@drawable/bg_white_gray_stroke_corner_5"
        android:padding="@dimen/space_12">

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_cur_adha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingRight="@dimen/space_1"
            android:text="@string/currency"
            android:textColor="@color/color_35_120_201"
            android:textSize="@dimen/txt_12"
            app:font_type="AvenirNextLTPro_Medium" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_eid_al_adha_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_cur_adha"
            android:text=""
            android:textColor="@color/color_35_120_201"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Medium" />

        <com.weekend.views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_eid_al_adha_price"
            android:gravity="right"
            android:text="@string/eid_al_adha"
            android:textColor="@color/color_105_111_116"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_downpayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:gravity="center"
        android:padding="@dimen/space_15">

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_cur_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/currency"
            android:textColor="@color/color_63_67_72"
            android:textSize="@dimen/txt_12"
            app:font_type="AvenirNextLTPro_Regular_0" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_down_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_cur_down"
            android:paddingLeft="@dimen/space_3"
            android:paddingRight="@dimen/space_3"
            android:text=""
            android:textColor="@color/color_63_67_72"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_down_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/tv_down_price"
            android:gravity="center"
            android:text="@string/downpayment"
            android:textColor="@color/color_63_67_72"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />
    </RelativeLayout>

    <com.weekend.views.CustomTextView
        android:id="@+id/tv_downpayment_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:gravity="center"
        android:padding="@dimen/space_15"
        android:text="@string/no_booking_service_available"
        android:textColor="@color/color_63_67_72"
        android:textSize="@dimen/txt_14"
        android:visibility="gone"
        app:font_type="AvenirNextLTPro_Regular_0" />

</LinearLayout>