<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginTop="@dimen/space_20"
        android:src="@mipmap/image_logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <com.weekend.views.CustomTextView
                    android:id="@+id/tv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_20"
                    android:drawablePadding="@dimen/space_10"
                    android:drawableRight="@mipmap/icon_home_menu"
                    android:gravity="start|center_vertical"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingTop="@dimen/space_10"
                    android:text="@string/home"
                    android:textColor="@color/color_105_111_116"
                    android:textSize="@dimen/txt_14"
                    app:font_type="AvenirNextLTPro_Regular_0" />

                <View
                    android:id="@+id/v_home"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="@dimen/space_60"
                    android:background="@color/color_105_111_116" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_signup_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <com.weekend.views.CustomTextView
                    android:id="@+id/tv_signup_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_20"
                    android:drawablePadding="@dimen/space_10"
                    android:drawableRight="@mipmap/icon_signup_menu"
                    android:gravity="start|center_vertical"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingTop="@dimen/space_10"
                    android:text="@string/sign_up_sign_in"
                    android:textColor="@color/color_105_111_116"
                    android:textSize="@dimen/txt_14"
                    app:font_type="AvenirNextLTPro_Regular_0" />

                <View
                    android:id="@+id/v_signup_signin"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="@dimen/space_60"
                    android:background="@color/color_105_111_116" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <com.weekend.views.CustomTextView
                    android:id="@+id/tv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_20"
                    android:drawablePadding="@dimen/space_10"
                    android:drawableRight="@mipmap/icon_search"
                    android:gravity="start|center_vertical"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingTop="@dimen/space_10"
                    android:text="@string/search"
                    android:textColor="@color/color_105_111_116"
                    android:textSize="@dimen/txt_14"
                    app:font_type="AvenirNextLTPro_Regular_0" />

                <View
                    android:id="@+id/v_search"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="@dimen/space_60"
                    android:background="@color/color_105_111_116" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical"
                android:visibility="visible">

                <com.weekend.views.CustomTextView
                    android:id="@+id/tv_credits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_20"
                    android:drawablePadding="@dimen/space_10"
                    android:drawableRight="@mipmap/icon_wallet"
                    android:gravity="start|center_vertical"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingTop="@dimen/space_10"
                    android:text="@string/credit"
                    android:textColor="@color/color_105_111_116"
                    android:textSize="@dimen/txt_14"
                    app:font_type="AvenirNextLTPro_Regular_0" />

                <View
                    android:id="@+id/v_credits"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="@dimen/space_60"
                    android:background="@color/color_105_111_116" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_loggedin_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ll_my_favorites"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <com.weekend.views.CustomTextView
                        android:id="@+id/tv_my_favorites"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_20"
                        android:drawablePadding="@dimen/space_10"
                        android:drawableRight="@mipmap/img_my_favorites"
                        android:gravity="start|center_vertical"
                        android:paddingBottom="@dimen/space_10"
                        android:paddingTop="@dimen/space_10"
                        android:text="@string/my_favorites"
                        android:textColor="@color/color_105_111_116"
                        android:textSize="@dimen/txt_14"
                        app:font_type="AvenirNextLTPro_Regular_0" />

                    <View
                        android:id="@+id/v_my_favorites"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginRight="@dimen/space_60"
                        android:background="@color/color_105_111_116" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_my_bookings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <com.weekend.views.CustomTextView
                        android:id="@+id/tv_my_bookings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_20"
                        android:drawablePadding="@dimen/space_10"
                        android:drawableRight="@mipmap/img_my_bookings"
                        android:gravity="start|center_vertical"
                        android:paddingBottom="@dimen/space_10"
                        android:paddingTop="@dimen/space_10"
                        android:text="@string/my_bookings"
                        android:textColor="@color/color_105_111_116"
                        android:textSize="@dimen/txt_14"
                        app:font_type="AvenirNextLTPro_Regular_0" />

                    <View
                        android:id="@+id/v_my_bookings"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginRight="@dimen/space_60"
                        android:background="@color/color_105_111_116" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_my_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <com.weekend.views.CustomTextView
                        android:id="@+id/tv_my_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_20"
                        android:drawablePadding="@dimen/space_10"
                        android:drawableRight="@mipmap/img_profile"
                        android:gravity="start|center_vertical"
                        android:paddingBottom="@dimen/space_10"
                        android:paddingTop="@dimen/space_10"
                        android:text="@string/my_profile"
                        android:textColor="@color/color_105_111_116"
                        android:textSize="@dimen/txt_14"
                        app:font_type="AvenirNextLTPro_Regular_0" />

                    <View
                        android:id="@+id/v_my_profile"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginRight="@dimen/space_60"
                        android:background="@color/color_105_111_116" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <com.weekend.views.CustomTextView
                        android:id="@+id/tv_change_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_20"
                        android:drawablePadding="@dimen/space_10"
                        android:drawableRight="@mipmap/img_change_password"
                        android:gravity="start|center_vertical"
                        android:paddingBottom="@dimen/space_10"
                        android:paddingTop="@dimen/space_10"
                        android:text="@string/change_password"
                        android:textColor="@color/color_105_111_116"
                        android:textSize="@dimen/txt_14"
                        app:font_type="AvenirNextLTPro_Regular_0" />

                    <View
                        android:id="@+id/v_change_password"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginRight="@dimen/space_60"
                        android:background="@color/color_105_111_116" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <com.weekend.views.CustomTextView
                    android:id="@+id/tv_about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_20"
                    android:drawablePadding="@dimen/space_10"
                    android:drawableRight="@mipmap/icon_information"
                    android:gravity="start|center_vertical"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingTop="@dimen/space_10"
                    android:text="@string/about_us"
                    android:textColor="@color/color_105_111_116"
                    android:textSize="@dimen/txt_14"
                    app:font_type="AvenirNextLTPro_Regular_0" />

                <View
                    android:id="@+id/v_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="@dimen/space_60"
                    android:background="@color/color_105_111_116" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_terms_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <com.weekend.views.CustomTextView
                    android:id="@+id/tv_terms_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_20"
                    android:drawablePadding="@dimen/space_10"
                    android:drawableRight="@mipmap/icon_terms_and_condition"
                    android:gravity="start|center_vertical"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingTop="@dimen/space_10"
                    android:text="@string/terms_conditions"
                    android:textColor="@color/color_105_111_116"
                    android:textSize="@dimen/txt_14"
                    app:font_type="AvenirNextLTPro_Regular_0" />

                <View
                    android:id="@+id/v_terms_conditions"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="@dimen/space_60"
                    android:background="@color/color_105_111_116" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <com.weekend.views.CustomTextView
                    android:id="@+id/tv_privacy_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_20"
                    android:drawablePadding="@dimen/space_10"
                    android:drawableRight="@mipmap/icon_privacy_policy"
                    android:gravity="start|center_vertical"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingTop="@dimen/space_10"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/color_105_111_116"
                    android:textSize="@dimen/txt_14"
                    app:font_type="AvenirNextLTPro_Regular_0" />

                <View
                    android:id="@+id/v_privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="@dimen/space_60"
                    android:background="@color/color_105_111_116" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <com.weekend.views.CustomTextView
                    android:id="@+id/tv_faq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_20"
                    android:drawablePadding="@dimen/space_10"
                    android:drawableRight="@mipmap/icon_faq"
                    android:gravity="start|center_vertical"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingTop="@dimen/space_10"
                    android:text="@string/faqs"
                    android:textColor="@color/color_105_111_116"
                    android:textSize="@dimen/txt_14"
                    app:font_type="AvenirNextLTPro_Regular_0" />

                <View
                    android:id="@+id/v_faq"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="@dimen/space_60"
                    android:background="@color/color_105_111_116" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical"
                android:visibility="visible">

                <com.weekend.views.CustomTextView
                    android:id="@+id/tv_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_20"
                    android:drawablePadding="@dimen/space_10"
                    android:drawableRight="@mipmap/icon_help"
                    android:gravity="start|center_vertical"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingTop="@dimen/space_10"
                    android:text="@string/help"
                    android:textColor="@color/color_105_111_116"
                    android:textSize="@dimen/txt_14"
                    app:font_type="AvenirNextLTPro_Regular_0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:id="@+id/v_logout"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="@dimen/space_60"
                    android:background="@color/color_105_111_116" />

                <com.weekend.views.CustomTextView
                    android:id="@+id/tv_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_20"
                    android:drawablePadding="@dimen/space_10"
                    android:drawableRight="@mipmap/img_logout"
                    android:gravity="start|center_vertical"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingTop="@dimen/space_10"
                    android:text="@string/logout"
                    android:textColor="@color/color_105_111_116"
                    android:textSize="@dimen/txt_14"
                    app:font_type="AvenirNextLTPro_Regular_0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:id="@+id/v_not"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="@dimen/space_60"
                    android:background="@color/color_105_111_116" />

                <com.weekend.views.CustomTextView
                    android:id="@+id/tv_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_25"
                    android:drawablePadding="@dimen/space_15"
                    android:drawableRight="@mipmap/img_notification_sc18"
                    android:gravity="start|center_vertical"
                    android:paddingBottom="@dimen/space_15"
                    android:paddingTop="@dimen/space_15"
                    android:text="@string/notifications"
                    android:textColor="@color/color_105_111_116"
                    android:textSize="@dimen/txt_14"
                    app:font_type="AvenirNextLTPro_Regular_0" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_chats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical"
                android:visibility="visible">

                <View
                    android:id="@+id/v_chats"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="@dimen/space_60"
                    android:background="@color/color_105_111_116" />

                <com.weekend.views.CustomTextView
                    android:id="@+id/tv_chats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_20"
                    android:drawablePadding="@dimen/space_15"
                    android:drawableRight="@mipmap/ic_chat"
                    android:gravity="start|center_vertical"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingTop="@dimen/space_10"
                    android:text="Chats"
                    android:textColor="@color/color_105_111_116"
                    android:textSize="@dimen/txt_14"
                    app:font_type="AvenirNextLTPro_Regular_0" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>