<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_243_243_243"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-100dp"
        android:src="@mipmap/img_thank_you_sc15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.weekend.views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_20"
            android:gravity="center"
            android:text="@string/thank_you"
            android:textColor="@color/color_35_120_201"
            android:textSize="@dimen/txt_22"
            app:font_type="AvenirNextLTPro_Demi_0" />

        <com.weekend.views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/space_5"
            android:text="@string/for_booking_with_us"
            android:textColor="@color/color_105_111_116"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_booking_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_15"
            android:gravity="center"
            android:padding="@dimen/space_5"
            android:textColor="@color/color_105_111_116"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />

        <com.weekend.views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/space_3"
            android:text="@string/cheers"
            android:textColor="@color/color_63_67_72"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Medium" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_ok_thanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_15"
            android:background="@drawable/btn_blue_selector"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/space_10"
            android:paddingLeft="@dimen/space_30"
            android:paddingRight="@dimen/space_30"
            android:paddingTop="@dimen/space_10"
            android:text="@string/ok_thanks"
            android:textColor="@color/color_255_255_255"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Medium" />
    </LinearLayout>
</RelativeLayout>