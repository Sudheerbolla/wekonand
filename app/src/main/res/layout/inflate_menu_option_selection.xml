<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#44000000"
        android:orientation="vertical"
        android:padding="@dimen/space_10">

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_menu1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_white_white_shaded_selector"
            android:gravity="center"
            android:padding="@dimen/space_15"
            android:text="@string/mobile_number_updated"
            android:textColor="@color/color_105_111_116"
            android:textSize="@dimen/txt_15"
            app:font_type="AvenirNextLTPro_Regular_0" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_menu2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:background="@drawable/btn_white_white_shaded_selector"
            android:gravity="center"
            android:padding="@dimen/space_15"
            android:text="@string/mobile_number_not_updated"
            android:textColor="@color/color_105_111_116"
            android:textSize="@dimen/txt_15"
            app:font_type="AvenirNextLTPro_Regular_0" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_menu_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:background="@drawable/btn_white_white_shaded_selector"
            android:gravity="center"
            android:padding="@dimen/space_15"
            android:text="@string/cancel"
            android:textColor="@color/color_105_111_116"
            android:textSize="@dimen/txt_15"
            app:font_type="AvenirNextLTPro_Demi_0" />
    </LinearLayout>
</RelativeLayout>