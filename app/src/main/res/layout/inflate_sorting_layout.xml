<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/sorting_layout_width"
    android:layout_height="wrap_content"
    android:background="@color/color_243_243_243"
    android:elevation="4dp">

    <LinearLayout
        android:id="@+id/ll_sorting"
        android:layout_width="@dimen/sorting_layout_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_sort_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/space_10"
                android:src="@mipmap/icon_close" />

            <com.weekend.views.CustomTextView
                android:id="@+id/tv_sort_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="@dimen/space_10"
                android:text="@string/sort_by"
                android:textColor="@color/color_105_111_116"
                android:textSize="@dimen/txt_16"
                app:font_type="AvenirNextLTPro_Demi_0" />

            <View
                android:id="@+id/v_line"
                android:layout_width="90dp"
                android:layout_height="1px"
                android:layout_below="@id/tv_sort_by"
                android:layout_centerHorizontal="true"
                android:background="@color/color_105_111_116" />
        </RelativeLayout>

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_sort_relevance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/relevance"
            android:textColor="@color/txt_gray_blue_selector"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_sort_price_low_to_high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/price_low_to_high"
            android:textColor="@color/txt_gray_blue_selector"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_sort_price_high_to_low"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/price_high_to_low"
            android:textColor="@color/txt_gray_blue_selector"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_sort_nearest_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/nearest_first"
            android:textColor="@color/txt_gray_blue_selector"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />
    </LinearLayout>
</android.support.v7.widget.CardView>