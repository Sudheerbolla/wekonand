<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/filter_layout_width"
    android:layout_height="wrap_content"
    android:background="@color/color_243_243_243"
    android:elevation="4dp">

    <LinearLayout
        android:id="@+id/ll_sorting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_filter_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/space_10"
                android:src="@mipmap/icon_close" />

            <com.weekend.views.CustomTextView
                android:id="@+id/tv_filter_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="@dimen/space_10"
                android:text="@string/filter_by"
                android:textColor="@color/color_105_111_116"
                android:textSize="@dimen/txt_16"
                app:font_type="AvenirNextLTPro_Demi_0" />

            <View
                android:id="@+id/v_line"
                android:layout_width="150dp"
                android:layout_height="1px"
                android:layout_below="@id/tv_filter_by"
                android:layout_centerHorizontal="true"
                android:background="@color/color_105_111_116" />
        </RelativeLayout>

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_filter_online_payment_facility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/online_payment_facility"
            android:textColor="@color/color_105_111_116"
            android:textSize="@dimen/txt_14"
            android:visibility="gone"
            app:font_type="AvenirNextLTPro_Regular_0" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_filter_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/all"
            android:textColor="@color/txt_gray_blue_selector"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_filter_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/available"
            android:textColor="@color/txt_gray_blue_selector"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_filter_unavailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/unavailable"
            android:textColor="@color/txt_gray_blue_selector"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />

        <View
            android:id="@+id/v_line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_filter_by"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_5"
            android:background="@color/color_105_111_116" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_filter_schedule_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_checkbox_selector"
            android:drawablePadding="@dimen/space_10"
            android:gravity="center"
            android:padding="@dimen/space_10"
            android:text="@string/show_with_schedule_available"
            android:textColor="@color/color_35_120_201"
            android:textSize="@dimen/txt_14"
            app:font_type="AvenirNextLTPro_Regular_0" />
    </LinearLayout>
</android.support.v7.widget.CardView>