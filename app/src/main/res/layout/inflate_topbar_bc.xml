<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/color_35_120_201">

    <LinearLayout
        android:id="@+id/ll_btns_end"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_navbar_location_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/space_6"
            android:paddingRight="@dimen/space_6"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:src="@drawable/btn_navbar_location_map_selector"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_navbar_sorting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/space_6"
            android:paddingRight="@dimen/space_6"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:src="@drawable/btn_navbar_sorting_selector" />

        <ImageView
            android:id="@+id/iv_navbar_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/space_6"
            android:paddingRight="@dimen/space_6"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:src="@drawable/btn_navbar_filter_selector" />

        <RelativeLayout
            android:id="@+id/rl_navbar_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_navbar_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/space_6"
                android:paddingRight="@dimen/space_6"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:src="@drawable/btn_navbar_notification_selector" />

            <com.weekend.views.CustomTextView
                android:id="@+id/tv_notification_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginTop="@dimen/space_12"
                android:background="@drawable/notif_count_bg"
                android:paddingBottom="@dimen/space_3"
                android:paddingLeft="@dimen/space_5"
                android:paddingRight="@dimen/space_5"
                android:paddingTop="@dimen/space_3"
                android:textColor="@color/color_255_255_255"
                android:textSize="@dimen/txt_8"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_navbar_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/space_6"
            android:paddingRight="@dimen/space_6"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:src="@drawable/btn_navbar_rating_selector" />

        <ImageView
            android:id="@+id/iv_navbar_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/space_6"
            android:paddingRight="@dimen/space_6"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:src="@drawable/btn_navbar_share_selector" />

        <ImageView
            android:id="@+id/iv_navbar_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/space_6"
            android:paddingRight="@dimen/space_6"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:src="@drawable/btn_navbar_search_selector" />

        <ImageView
            android:id="@+id/iv_navbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/space_6"
            android:paddingRight="@dimen/space_6"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:src="@drawable/btn_navbar_back_selector"
            android:visibility="gone" />

        <com.weekend.views.CustomTextView
            android:id="@+id/tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/space_6"
            android:paddingRight="@dimen/space_6"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:text="@string/skip"
            android:textColor="@color/color_255_255_255"
            android:textSize="@dimen/txt_12"
            android:visibility="gone"
            app:font_type="AvenirNextLTPro_Regular_0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_btns_start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_navbar_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/space_6"
            android:paddingRight="@dimen/space_6"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:src="@drawable/btn_navbar_menu_selector" />

        <ImageView
            android:id="@+id/iv_navbar_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/space_6"
            android:paddingRight="@dimen/space_6"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:src="@drawable/btn_navbar_map_selector" />
    </LinearLayout>

    <com.weekend.views.CustomTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ll_btns_start"
        android:layout_toRightOf="@id/ll_btns_end"
        android:ellipsize="marquee"
        android:gravity="center"
        android:lines="1"
        android:paddingLeft="@dimen/space_5"
        android:paddingRight="@dimen/space_5"
        android:textColor="@color/color_255_255_255"
        android:textSize="@dimen/txt_16"
        app:font_type="AvenirNextLTPro_Demi_0" />

</RelativeLayout>