<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_243_243_243"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_10"
    android:paddingLeft="@dimen/space_10"
    android:paddingRight="@dimen/space_10">

    <com.weekend.views.CustomTextView
        android:id="@+id/tv_recenter_current_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_10"
        android:background="@drawable/bg_white_blue_stroke_corner_5"
        android:drawablePadding="@dimen/space_10"
        android:drawableRight="@mipmap/img_change_location_sc22"
        android:gravity="center"
        android:padding="@dimen/space_10"
        android:text="@string/recenter_my_current_location"
        android:textColor="@color/color_35_120_201"
        android:textSize="@dimen/txt_14"
        app:font_type="AvenirNextLTPro_Regular_0" />

    <com.weekend.views.CustomEditText
        android:id="@+id/edt_search_city"
        style="@style/EditText"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/space_10"
        android:drawableLeft="@mipmap/img_search_city_sc22"
        android:drawableRight="@mipmap/img_city_sc21"
        android:hint="@string/enter_city"
        android:textDirection="rtl"
        app:font_type="AvenirNextLTPro_Regular_0" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10"
        android:background="@drawable/bg_white_corner_5" />

    <com.weekend.views.CustomTextView
        android:id="@+id/tv_no_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_cities_found"
        android:textColor="@color/color_105_111_116"
        android:textSize="@dimen/txt_14"
        android:visibility="gone"
        app:font_type="AvenirNextLTPro_Medium" />
</LinearLayout>